<resources>
    <!-- Base application theme. -->
    <style name="Theme.HappySapcetoonTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="text_view_style">
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
    </style>



    <style name="image_style">
        <item name="android:layout_width">@dimen/imagesWidth</item>
        <item name="android:layout_height">@dimen/cardHeight</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="card_text_tittle_style">
        <item name="android:textColor">@color/black_tittle</item>
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
    </style>

    <style name="card_text_body_style">
        <item name="android:textColor">@color/black_body</item>
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
    </style>


    <style name="cornerImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
    </style>
    <style name="cornerImage.cornerImageCardsHome" parent="">
        <item name="cornerSizeTopRight">@dimen/normalRadius</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="cornerImageCardHistory" parent="">
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
    </style>

    <style name="cornerImageMusic" parent="">
        <item name="cornerSize">0dp</item>
    </style>

</resources>