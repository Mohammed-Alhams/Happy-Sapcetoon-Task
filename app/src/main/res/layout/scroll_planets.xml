<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="@dimen/sizeImagePlanet"
            android:layout_height="@dimen/sizeImagePlanet"
            android:layout_marginEnd="@dimen/smallSpace"
            android:src="@drawable/planet1" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="@dimen/sizeImagePlanet"
            android:layout_height="@dimen/sizeImagePlanet"
            android:layout_marginEnd="@dimen/smallSpace"
            android:src="@drawable/planet2" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="@dimen/sizeImagePlanet"
            android:layout_height="@dimen/sizeImagePlanet"
            android:layout_marginEnd="@dimen/smallSpace"
            android:src="@drawable/planet3" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="@dimen/sizeImagePlanet"
            android:layout_height="@dimen/sizeImagePlanet"
            android:layout_marginEnd="@dimen/smallSpace"
            android:src="@drawable/planet4" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="@dimen/sizeImagePlanet"
            android:layout_height="@dimen/sizeImagePlanet"
            android:layout_marginEnd="@dimen/smallSpace"
            android:src="@drawable/planet5" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="@dimen/sizeImagePlanet"
            android:layout_height="@dimen/sizeImagePlanet"
            android:layout_marginEnd="@dimen/smallSpace"
            android:src="@drawable/planet3" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="@dimen/sizeImagePlanet"
            android:layout_height="@dimen/sizeImagePlanet"
            android:layout_marginEnd="@dimen/smallSpace"
            android:src="@drawable/planet4" />

    </LinearLayout>

</HorizontalScrollView>