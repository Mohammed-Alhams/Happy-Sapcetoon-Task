                    style="@style/card_text_tittle_style"
                    android:text="@string/haidy"
                    app:layout_constraintStart_toEndOf="@+id/imageView7"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView9"
                    style="@style/card_text_body_style"
                    android:text="@string/zomorda_planet"
                    app:layout_constraintStart_toEndOf="@+id/imageView7"
                    app:layout_constraintTop_toBottomOf="@+id/textView8" />

                <TextView
                    android:id="@+id/textView10"
                    style="@style/card_text_body_style"
                    android:text="@string/season_1_episode_1"
                    app:layout_constraintStart_toEndOf="@+id/imageView7"
                    app:layout_constraintTop_toBottomOf="@+id/textView9" />

                <TextView
                    android:id="@+id/textView11"
                    style="@style/card_text_body_style"
                    android:layout_marginTop="@dimen/marginCard"
                    android:layout_marginEnd="@dimen/marginCard"
                    android:text="@string/_6_days_ago"
