                <ImageView
                    android:id="@+id/imageView611"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="17dp"
                    android:src="@drawable/download"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView252" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            style="@style/constraint_style"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView183"
                style="@style/image_style"
                app:shapeAppearanceOverlay="@style/cornerImage"
                android:src="@drawable/lesa"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/textView223"
                    style="@style/card_text_tittle_style"
                    android:text="@string/haidy"
                    app:layout_constraintStart_toEndOf="@+id/imageView183"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView233"
                    style="@style/card_text_body_style"
                    android:text="@string/zomorda_planet"
                    app:layout_constraintStart_toEndOf="@+id/imageView183"
                    app:layout_constraintTop_toBottomOf="@+id/textView223" />

                <TextView
                    android:id="@+id/textView243"
                    style="@style/card_text_body_style"
                    android:text="@string/season_1_episode_1"
                    app:layout_constraintStart_toEndOf="@+id/imageView183"
                    app:layout_constraintTop_toBottomOf="@+id/textView233" />

                <TextView
                    android:id="@+id/textView253"
