                    android:layout_marginEnd="17dp"
                    android:src="@drawable/download"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView251" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                style="@style/constraint_style"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView182"
                    style="@style/image_style"
                    app:shapeAppearanceOverlay="@style/cornerImage"
                    android:src="@drawable/brother"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView222"
                    style="@style/card_text_tittle_style"
                    android:text="@string/haidy"
                    app:layout_constraintStart_toEndOf="@+id/imageView182"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView232"
                    style="@style/card_text_body_style"
                    android:text="@string/zomorda_planet"
                    app:layout_constraintStart_toEndOf="@+id/imageView182"
                    app:layout_constraintTop_toBottomOf="@+id/textView222" />

                <TextView
                    android:id="@+id/textView242"
